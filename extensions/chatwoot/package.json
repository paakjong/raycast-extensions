{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "chatwoot",
  "title": "Chatwoot",
  "description": "The modern, open source, self-hosted customer support platform",
  "icon": "chatwoot.png",
  "author": "xmok",
  "platforms": [
    "macOS"
  ],
  "categories": [
    "Communication"
  ],
  "license": "MIT",
  "preferences": [
    {
      "name": "chatwoot_url",
      "title": "Chatwoot URL",
      "placeholder": "https://app.chatwoot.com/",
      "type": "textfield",
      "required": true,
      "description": "Chatwoot URL",
      "default": "https://app.chatwoot.com/"
    },
    {
      "name": "access_token",
      "title": "Application Access Token",
      "placeholder": "xXxxX...xxx",
      "type": "password",
      "required": true,
      "description": "Chatwoot Application Access Token"
    },
    {
      "name": "account_id",
      "title": "Account ID",
      "placeholder": "2",
      "type": "textfield",
      "required": true,
      "description": "Chatwoot Account ID"
    }
  ],
  "commands": [
    {
      "name": "list-contacts",
      "title": "List Contacts",
      "description": "View Contacts",
      "mode": "view"
    },
    {
      "name": "list-conversations",
      "title": "List Conversations",
      "description": "View Conversations & Messages",
      "mode": "view"
    },
    {
      "name": "list-inboxes",
      "title": "List Inboxes",
      "description": "View Inboxes",
      "mode": "view"
    },
    {
      "name": "list-integrations",
      "title": "List Integrations",
      "description": "View Integrations",
      "mode": "view"
    },
    {
      "name": "list-portals",
      "title": "List Portals",
      "description": "View Portals",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.2",
    "@raycast/utils": "^1.17.0",
    "date-fns": "^4.1.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "22.13.10",
    "@types/react": "19.0.10",
    "eslint": "^9.22.0",
    "prettier": "^3.5.3",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "build": "ray build",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "prepublishOnly": "echo \"\\n\\nIt seems like you are trying to publish the Raycast extension to npm.\\n\\nIf you did intend to publish it to npm, remove the \\`prepublishOnly\\` script and rerun \\`npm publish\\` again.\\nIf you wanted to publish it to the Raycast Store instead, use \\`npm run publish\\` instead.\\n\\n\" && exit 1",
    "publish": "npx @raycast/api@latest publish"
  }
}
